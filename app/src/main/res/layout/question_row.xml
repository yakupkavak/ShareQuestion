<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    android:gravity="center"
    android:textAlignment="center"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/questionImageRow"
            android:layout_width="200dp"
            android:scaleType="fitCenter"
            android:src="@color/common_google_signin_btn_text_dark_default"
            android:layout_height="200dp">
        </ImageView>
        <ImageView
            android:id="@+id/questionSaveImg"
            android:src="@drawable/savequestion"
            android:layout_width="30dp"
            android:scaleType="fitCenter"
            android:layout_height="30dp">
        </ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/questionTextRow"
        android:text="Try"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Show comments"
            android:id="@+id/show_comments_text">
        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commentRecyclerView"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/question_row_linear"
        android:layout_width="300dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/add_image_comment"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitCenter"
            android:src="@drawable/addimage">
        </ImageButton>
        <EditText
            android:id="@+id/question_user_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </EditText>
        <ImageButton
            android:id="@+id/send_comment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00FFFFFF"
            android:src="@android:drawable/ic_menu_send">
        </ImageButton>
    </LinearLayout>


</LinearLayout>